{% extends 'base.html.j2'%}
{% block title %}
Pokemon
{% endblock %}


{% block content %}
<h1>Pokemon Properties</h1>
<form action="/pokemon" method="POST">
  {{form.hidden_tag()}}
  <div class="mb-3">
    {{form.name.label(class="form-label")}}
    {{form.name(class="form-control")}}
    
    {% for error in form.name.errors %}
      <small style="color:red"></small>{{error}}</div>
    {% endfor %}
  
  </div>
  <div>
  {{form.submit(class="btn btn-primary")}}
  </div>
  
</form>

{% if pokemons %}
  <table class="table table-striped table-hover table-dark">
  
    <thead>
      <tr>
        <th scope="col">Pokemon</th>
        <th scope="col">Ability Name</th>
        <th scope="col">Base Experience</th>
        <th scope="col">Sprite Url</th>
        <th scope="col">Attack Base Stat</th>
        <th scope="col">Hp Base Stat</th>
        <th scope="col">Defense Base Stat</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">{{pokemons.pokemon}}</th>
        <td>{{pokemons.ability_name}}</td>
        <td>{{pokemons.base_experience}}</td>
        <td><img src="{{pokemons.sprite_url}}"  width= 80px alt = "Pokemon Sprite Image"></td>
        <td>{{pokemons.attack_base_stat}}</td>
        <td>{{pokemons.hp_base_stat}}</td>
        <td>{{pokemons.defense_base_stat}}</td>
      </tr>
    </tbody>
  </table>
{% endif %}




{% endblock %}