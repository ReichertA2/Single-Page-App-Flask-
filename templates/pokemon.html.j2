{% extends 'base.html.j2'%}
{% block title %}
Pokemon
{% endblock %}


{% block content %}
<h1>Pokemon Properties</h1>
<form action="/pokemon" method="POST">
  <div class="mb-3">
  
    <label for="pokemon_name" class="form-label">Pokemon Name</label>
    <input type="text" class="form-control" id="pokemon_name" name="pokemon_name">
    
    {# <div id="pokemon_nameHelp" class="form-text">pokemon name</div> #}
  </div>
  {# <div class="mb-3">
    <label for="exampleInputPassword1" class="form-label">Password</label>
    <input type="password" class="form-control" id="exampleInputPassword1">
  </div>
  <div class="mb-3 form-check">
    <input type="checkbox" class="form-check-input" id="exampleCheck1">
    <label class="form-check-label" for="exampleCheck1">Check me out</label>
  </div> #}
  <div style="color:red"><small>{{error}}</small></div>
  <button type="submit" class="btn btn-primary">Submit</button>
</form>

{% if pokemons %}
  <table class="table table-striped table-hover table-dark">
    <thead>
      <tr>
        <th scope="col">Pokemon</th>
        <th scope="col">Ability Name</th>
        <th scope="col">Base Experience</th>
        <th scope="col">Sprite Url</th>
        <th scope="col">Attack Base Stat</th>
        <th scope="col">Hp Base Stat</th>
        <th scope="col">Defense Base Stat</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <th scope="row">{{pokemons.pokemon}}</th>
        <td>{{pokemons.ability_name}}</td>
        <td>{{pokemons.base_experience}}</td>
        <td><img src="{{pokemons.sprite_url}}"  width= 80px alt = "Pokemon Sprite Image"></td>
        <td>{{pokemons.attack_base_stat}}</td>
        <td>{{pokemons.hp_base_stat}}</td>
        <td>{{pokemons.defense_base_stat}}</td>
      </tr>
    </tbody>
  </table>
{% endif %}




{% endblock %}