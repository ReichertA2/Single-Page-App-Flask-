{% block content %}
<div class="body">
<h1 class = "glow_effect">CHOOSE WISELY</h1>

<form action="{{url_for('main.pokemon')}}" method="POST">
  <div class="textbox_button">
  {{form.hidden_tag()}}
  
    <div class="mb-3">
      {{form.name.label(class="form-label")}}
      {{form.name(class="form-control w-25")}}

      {% for error in form.name.errors %}
        <small style="color:red"></small>{{error}}</div>

      {% endfor %}
    
    </div>
    <div>
    {{form.submit(class="btn btn-dark form-control w-25 mb-3")}}
    </div>
  </div>
    
</form>

